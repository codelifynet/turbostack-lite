# ============================================
# API ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values.
# Do not commit .env to version control.

# Database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/turbostack?schema=public"

# API Server
PORT=4101
CORS_ORIGIN="http://localhost:4100"
FRONTEND_URL="http://localhost:4100"

# Production: When API and Web are on different subdomains (e.g. api.turbostack.pro / demo.turbostack.pro),
# set COOKIE_DOMAIN to share the session cookie (e.g. .turbostack.pro)
# COOKIE_DOMAIN=.turbostack.pro

# Auth (JWT)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Session (Next.js Server-side)
SESSION_SECRET="your-session-secret-key-change-in-production"

# Better Auth
BETTER_AUTH_URL="http://localhost:4101"
BETTER_AUTH_SECRET="your-better-auth-secret-key-change-in-production"

# Email (Resend)
RESEND_API_KEY="re_your_api_key_here"
FROM_EMAIL="onboarding@yourdomain.com"
APP_NAME="TurboStack"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Docs Auth (OpenAPI/Swagger Basic Auth)
# If not set, OpenAPI documentation will be publicly accessible
DOCS_USERNAME=admin
DOCS_PASSWORD=your_docs_password

# AI (OpenRouter)
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# UploadThing
UPLOADTHING_TOKEN=your_uploadthing_token_here

# Polar.sh Payment Integration (Backend)
POLAR_ACCESS_TOKEN="polar_at_your_access_token_here"
POLAR_WEBHOOK_SECRET="polar_wh_your_webhook_secret_here"


