{
	"name": "@repo/database",
	"version": "1.1.0",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		}
	},
	"scripts": {
		"db:generate": "prisma generate",
		"db:push": "bun --env-file=../../.env run prisma db push --accept-data-loss",
		"db:migrate": "bun --env-file=../../.env run prisma migrate dev",
		"db:reset": "bun --env-file=../../.env run prisma migrate reset --force",
		"db:studio": "bun --env-file=../../.env run prisma studio",
		"db:seed": "tsx prisma/seed.ts",
		"db:start": "bun run db:reset && bun run db:push && bun run db:seed",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf node_modules/.prisma"
	},
	"dependencies": {
		"@prisma/client": "^7.1.0",
		"@prisma/adapter-pg": "^7.1.0",
		"pg": "^8.13.1",
		"dotenv": "^16.4.5",
		"@node-rs/argon2": "^2.0.2",
		"pino": "^9.7.0"
	},
	"devDependencies": {
		"@repo/typescript-config": "*",
		"@types/pg": "^8.11.10",
		"prisma": "^7.1.0",
		"typescript": "5.9.2",
		"tsx": "^4.19.2"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	}
}