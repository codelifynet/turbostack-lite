{
	"name": "turbostack",
	"version": "1.1.0",
	"private": true,
	"packageManager": "bun@1.1.45",
	"scripts": {
		"build": "bun run check-types && turbo run build",
		"start": "concurrently --names \"api,web\" -c \"blue,green\" \"bun run start:api\" \"bun run start:web\"",
		"start:api": "cd apps/api && bun run start",
		"start:web": "cd apps/web && bun run start",
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=web",
		"dev:api": "turbo run dev --filter=api",
		"dev:docs": "turbo run dev --filter=docs",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types",
		"db:generate": "turbo run db:generate --filter=@repo/database",
		"db:push": "turbo run db:push --filter=@repo/database",
		"db:migrate": "turbo run db:migrate --filter=@repo/database",
		"db:reset": "turbo run db:reset --filter=@repo/database",
		"db:seed": "turbo run db:seed --filter=@repo/database",
		"db:studio": "turbo run db:studio --filter=@repo/database",
		"db:start": "bun run db:reset && bun run db:push && bun run db:seed",
		"polar:setup": "./scripts/setup-polar.sh",
		"deploy:setup": "./scripts/setup-deployment.sh",
		"docker:build:web": "turbo run build --filter=web",
		"docker:build:api": "turbo run build --filter=api",
		"clean": "turbo run clean",
		"ngrok": "ngrok http 4101",
		"release:check": "bun run check-types && bun run lint && bun run build",
		"release": "./scripts/release.sh",
		"release:tag-push": "./scripts/tag-and-push.sh",
		"release:version": "echo 'v1.1.0'",
		"release:tag": "git tag -a v1.1.0 -m 'Release v1.1.0' && git push origin v1.1.0",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --max-warnings 0 --fix",
			"prettier --write"
		],
		"*.{json,md,mdx,css,scss,yml,yaml}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"turbo": "^2.8.1",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=22"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {}
}
